<Window x:Class="WpfLab2Var8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 2 - Вариант 8" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="20">
        <!-- Заголовок -->
        <TextBlock Text="Вычисление выражения (Вариант 8)" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Формула 1 -->
        <RadioButton x:Name="rbFormula1" GroupName="Formulas" 
                    Checked="RadioButton_Checked">
            <WrapPanel>
                <TextBlock Text="Формула 1: z = (a + b) / c при условии..."/>
                <TextBox x:Name="txtA1" Width="50" Margin="10,0,5,0"/>
                <TextBlock Text="b:"/>
                <TextBox x:Name="txtB1" Width="50" Margin="5,0,5,0"/>
                <TextBlock Text="c:"/>
                <TextBox x:Name="txtC1" Width="50" Margin="5,0,5,0"/>
            </WrapPanel>
        </RadioButton>
        
        <!-- Формула 2 -->
        <RadioButton x:Name="rbFormula2" GroupName="Formulas" 
                    Checked="RadioButton_Checked">
            <StackPanel>
                <TextBlock Text="Формула 2: z = (a - b) * c при условии..."/>
                <WrapPanel>
                    <TextBlock Text="a:"/>
                    <TextBox x:Name="txtA2" Width="50" Margin="5,0,5,0"/>
                    <TextBlock Text="b:"/>
                    <TextBox x:Name="txtB2" Width="50" Margin="5,0,5,0"/>
                    <TextBlock Text="c:"/>
                    <TextBox x:Name="txtC2" Width="50" Margin="5,0,5,0"/>
                </WrapPanel>
            </StackPanel>
        </RadioButton>
        
        <!-- Формула 3 -->
        <RadioButton x:Name="rbFormula3" GroupName="Formulas" 
                    Checked="RadioButton_Checked">
            <StackPanel>
                <TextBlock Text="Формула 3: z = a * b - c при условии..."/>
                <WrapPanel>
                    <TextBlock Text="a:"/>
                    <TextBox x:Name="txtA3" Width="50" Margin="5,0,5,0"/>
                    <TextBlock Text="b:"/>
                    <TextBox x:Name="txtB3" Width="50" Margin="5,0,5,0"/>
                    <TextBlock Text="c:"/>
                    <TextBox x:Name="txtC3" Width="50" Margin="5,0,5,0"/>
                </WrapPanel>
            </StackPanel>
        </RadioButton>
        
        <!-- Формула 4 -->
        <RadioButton x:Name="rbFormula4" GroupName="Formulas" 
                    Checked="RadioButton_Checked">
            <WrapPanel>
                <TextBlock Text="Формула 4: z = a / b + c при условии..."/>
                <TextBox x:Name="txtA4" Width="50" Margin="10,0,5,0"/>
                <TextBlock Text="b:"/>
                <TextBox x:Name="txtB4" Width="50" Margin="5,0,5,0"/>
                <TextBlock Text="c:"/>
                <TextBox x:Name="txtC4" Width="50" Margin="5,0,5,0"/>
            </WrapPanel>
        </RadioButton>
        
        <!-- Кнопка расчета -->
        <Button x:Name="btnCalculate" Content="Считать" 
                Click="CalculateButton_Click" 
                Width="100" Height="30" 
                Margin="0,20,0,0" HorizontalAlignment="Left"/>
        
        <!-- Блок для вывода результата -->
        <TextBlock x:Name="tbResult" Text="Результат: " 
                   FontSize="14" Margin="0,20,0,0"/>
    </StackPanel>
</Window>